<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompareOffersActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView34"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:text="Job 1"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/textView35"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:text="Job 2"
                android:textSize="36sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout18"
            android:layout_width="393dp"
            android:layout_height="45dp"
            android:layout_marginStart="1dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="165dp"
                android:layout_height="match_parent"
                android:text="Title:"
                android:textColor="#0C0C0C"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/job1_title"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/job2_title"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout17"
            android:layout_width="393dp"
            android:layout_height="45dp"
            android:layout_marginStart="1dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="165dp"
                android:layout_height="match_parent"
                android:text="Company:"
                android:textColor="#0C0C0C"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/job1_company"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/job2_company"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="165dp"
                android:layout_height="match_parent"
                android:text="City:"
                android:textColor="#0C0C0C"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/job1_city"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/job2_city"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout14"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="165dp"
                android:layout_height="match_parent"
                android:text="State:"
                android:textColor="#0C0C0C"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/job1_state"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/job2_state"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout10"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="165dp"
                android:layout_height="match_parent"
                android:text="Commute Time:"
                android:textColor="#0C0C0C"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/job1_commute_time"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/job2_commute_time"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="165dp"
                android:layout_height="match_parent"
                android:text="Yearly Salary (adjusted for COL):"
                android:textColor="#0C0C0C"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/job1_yearly_salary"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/job2_yearly_salary"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginEnd="1dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="165dp"
                android:layout_height="match_parent"
                android:text="Yearly Bonus (adjusted for COL):"
                android:textColor="#0C0C0C"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/job1_yearly_bonus"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/job2_yearly_bonus"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="393dp"
            android:layout_height="70dp"
            android:layout_marginStart="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="165dp"
                android:layout_height="match_parent"
                android:text="Retirement Benefits:"
                android:textColor="#0C0C0C"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/job1_retirement_benefits"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/job2_retirement_benefits"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="393dp"
            android:layout_height="45dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="165dp"
                android:layout_height="match_parent"
                android:text="Leave Time:"
                android:textColor="#0C0C0C"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/job1_leave_time"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/job2_leave_time"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/mainmenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="mainMenu"
                android:text="Main Menu"
                android:textColor="#0E0E0E" />

            <Button
                android:id="@+id/compareOffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="compareAnotherOffer"
                android:text="Compare Another Offer"
                android:textColor="#0B0A0A" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>